@model ChiefAdsDetailViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string per = "100%";
    int perNum = 100;
}

<!-- Ads Header -->
<div class="single-page-header freelancer-header" data-background-image="images/single-freelancer.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="single-page-header-inner">
                    <div class="left-side">
                        <div class="header-image freelancer-avatar"><img src="~/images/avatar/woman-1.jpg" alt=""></div>
                        <div class="header-details">
                            <h3>@Model.ChiefAdvertisement.Title <span><i class="icon-line-awesome-user"></i> @Model.ChiefAdvertisement.ApplicationUser.Name @Model.ChiefAdvertisement.ApplicationUser.Surname</span></h3>
                            <ul>
                                <li><div class="star-rating" data-rating="4.5"></div></li>
                                <li><i class="icon-material-outline-location-on"></i> @Model.ChiefAdvertisement.ApplicationUser.Location</li>
                                <li><i class="icon-material-outline-business-center"></i> @Model.ChiefAdvertisement.Category</li>
                                <li><i class="icon-material-outline-access-time"></i> @Model.ChiefAdvertisement.CreatedAt.ToShortDateString()</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="background-image-container" style="background-image: url(&quot;images/single-freelancer.jpg&quot;);"></div>
</div>

<!-- Ads Content Container-->
<div class="container">
    <div class="row">

        <!-- Content -->
        <div class="col-xl-8 col-lg-8 content-right-offset">

            <div class="single-page-section">
                <h3 class="margin-bottom-25">İş Tanımı</h3>
                <p>@Model.ChiefAdvertisement.Description</p>
            </div>

            <!-- About Chief -->
            <div class="single-page-section">
                <h3 class="margin-bottom-25">Usta Hakkında</h3>
                <p>@Model.ChiefAdvertisement.ApplicationUser.AboutMe</p>
            </div>

            <!-- Boxed List -->
            <div class="boxed-list margin-bottom-60">
                <div class="boxed-list-headline">
                    <h3><i class="icon-material-outline-thumb-up"></i> Tamamladığı Siparişler ve Geri Dönüşler</h3>
                </div>
                <ul class="boxed-list-ul">
                    @foreach (var teklif in Model.Teklifler)
                    {
                        <li>
                            <div class="boxed-list-item">
                                <!-- Content -->
                                <div class="item-content">
                                    <h4>@teklif.ChiefAdvertisement.Title <span>@teklif.ApplicationUser.Name @teklif.ApplicationUser.Surname</span></h4>
                                    <div class="item-details margin-top-10">
                                        <div class="star-rating" data-rating="5.0"><span class="star"></span><span class="star"></span><span class="star"></span><span class="star"></span><span class="star"></span></div>
                                        <div class="detail-item"><i class="icon-material-outline-date-range"></i> @teklif.IsAccepted</div>
                                    </div>
                                    <div class="item-description">
                                        <p>@teklif.OfferDescription </p>
                                        <p>@teklif.OfferPrice </p>
                                        <p>@teklif.CreatedAt </p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>

                <!-- Pagination -->
                <div class="clearfix"></div>
                <div class="pagination-container margin-top-40 margin-bottom-10">
                    <nav class="pagination">
                        <ul>
                            <li><a href="#" class="ripple-effect current-page">1</a></li>
                            <li><a href="#" class="ripple-effect">2</a></li>
                            <li class="pagination-arrow"><a href="#" class="ripple-effect"><i class="icon-material-outline-keyboard-arrow-right"></i></a></li>
                        </ul>
                    </nav>
                </div>
                <div class="clearfix"></div>
                <!-- Pagination / End -->

            </div>
            <!-- Boxed List / End -->
        </div>

        <!-- Sidebar -->
        <div class="col-xl-4 col-lg-4">
            <div class="sidebar-container">

                <!-- Profile Overview -->
                <div class="profile-overview">
                    <div class="overview-item"><strong>@Model.ChiefAdvertisement.Price ₺</strong><span>Sipariş Ücreti</span></div>
                    <div class="overview-item"><strong>53</strong><span>Tamamlananmış İş</span></div>
                </div>

                <!-- Button -->
                <a href="#small-dialog" class="apply-now-button popup-with-zoom-anim margin-bottom-50">Sipariş Teklifi Yap <i class="icon-material-outline-arrow-right-alt"></i></a>

                <!-- Freelancer Indicators -->
                <div class="sidebar-widget">
                    <div class="freelancer-indicators">

                        <!-- Indicator -->
                        <div class="indicator">
                            <strong>88%</strong>
                            <div class="indicator-bar" data-indicator-percentage="88"><span style="width: 88%;"></span></div>
                            <span>Lezzetliydi</span>
                        </div>

                        <!-- Indicator -->
                        <div class="indicator">
                            <strong>100%</strong>
                            <div class="indicator-bar" data-indicator-percentage="100"><span style="width: 100%;"></span></div>
                            <span>Tavsiye Edebilebilirlik</span>
                        </div>

                        <!-- Indicator -->
                        <div class="indicator">
                            <strong>90%</strong>
                            <div class="indicator-bar" data-indicator-percentage="90"><span style="width: 90%;"></span></div>
                            <span>Zamanlama</span>
                        </div>
                        
                        <!-- Indicator -->
                        <div class="indicator">
                            <strong>@per</strong>
                            <div class="indicator-bar" data-indicator-percentage="@perNum"><span style="width: @per"></span></div>
                            <span>Genel Memnuniyet</span>
                        </div>
                    </div>
                </div>

                <!-- Widget -->
                <div class="sidebar-widget">
                    <h3>Social Profiles</h3>
                    <div class="freelancer-socials margin-top-25">
                        <ul>
                            <li><a href="#" data-tippy-placement="top" data-tippy="" data-original-title="Dribbble"><i class="icon-brand-dribbble"></i></a></li>
                            <li><a href="#" data-tippy-placement="top" data-tippy="" data-original-title="Twitter"><i class="icon-brand-twitter"></i></a></li>
                            <li><a href="#" data-tippy-placement="top" data-tippy="" data-original-title="Behance"><i class="icon-brand-behance"></i></a></li>
                            <li><a href="#" data-tippy-placement="top" data-tippy="" data-original-title="GitHub"><i class="icon-brand-github"></i></a></li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Order Modal-->
<div id="small-dialog" class="zoom-anim-dialog dialog-with-tabs mfp-hide">

    <!--Tabs -->
    <div class="sign-in-form">

        <ul class="popup-tabs-nav" style="pointer-events: none;">
            <li class="active"><a href="#tab">Sipariş Teklifi</a></li>
        </ul>

        <div class="popup-tabs-container">

            <!-- Tab -->
            <div class="popup-tab-content" id="tab" style="">

                <!-- Welcome Text -->
                <div class="welcome-text">
                    <h3>Little little into the middle</h3>
                </div>

                <!-- Form -->
                <form asp-controller="OrderOffer" asp-action="Create" method="post">
                    <input hidden asp-for="ChiefAdvertisement.Id" value="@Model.ChiefAdvertisement.Id" />

                    <div class="input-with-icon-left">
                        <i class="icon-material-outline-account-circle"></i>
                        <input type="text" class="input-text with-border" name="name" id="name" placeholder="First and Last Name">
                    </div>

                    <div class="input-with-icon-left">
                        <i class="icon-material-baseline-mail-outline"></i>
                        <input type="text" class="input-text with-border" name="emailaddress" id="emailaddress" placeholder="Email Address">
                    </div>

                    <textarea name="textarea" cols="10" placeholder="Message" class="with-border"></textarea>

                    <div class="uploadButton margin-top-25">
                        <input class="uploadButton-input" type="file" accept="image/*, application/pdf" id="upload" multiple="">
                        <label class="uploadButton-button ripple-effect" for="upload">Add Attachments</label>
                        <span class="uploadButton-file-name">Allowed file types: zip, pdf, png, jpg <br> Max. files size: 50 MB.</span>
                    </div>

                </form>

                <!-- Button -->
                <button class="button margin-top-35 full-width button-sliding-icon ripple-effect" type="submit">Make an Offer <i class="icon-material-outline-arrow-right-alt"></i></button>

            </div>
            <!-- Login -->
            <div class="popup-tab-content" id="loginn" style="display: none;">

                <!-- Welcome Text -->
                <div class="welcome-text">
                    <h3>Discuss Your Project With Tom</h3>
                </div>

                <!-- Form -->
                <form method="post" id="make-an-offer-form">

                    <div class="input-with-icon-left">
                        <i class="icon-material-outline-account-circle"></i>
                        <input type="text" class="input-text with-border" name="name2" id="name2" placeholder="First and Last Name" required="">
                    </div>

                    <div class="input-with-icon-left">
                        <i class="icon-material-baseline-mail-outline"></i>
                        <input type="text" class="input-text with-border" name="emailaddress2" id="emailaddress2" placeholder="Email Address" required="">
                    </div>

                    <textarea name="textarea" cols="10" placeholder="Message" class="with-border"></textarea>

                    <div class="uploadButton margin-top-25">
                        <input class="uploadButton-input" type="file" accept="image/*, application/pdf" id="upload-cv" multiple="">
                        <label class="uploadButton-button" for="upload-cv">Add Attachments</label>
                        <span class="uploadButton-file-name">Allowed file types: zip, pdf, png, jpg <br> Max. files size: 50 MB.</span>
                    </div>

                </form>

                <!-- Button -->
                <button class="button full-width button-sliding-icon ripple-effect" type="submit" form="make-an-offer-form">Make an Offer <i class="icon-material-outline-arrow-right-alt"></i></button>

            </div>

        </div>
    </div>
</div>