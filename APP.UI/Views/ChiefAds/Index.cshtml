@model IEnumerable<APP.Core.Models.ChiefAdvertisement>

@{
    ViewData["Title"] = "Usta İlanları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="margin-top-90"></div>

<div class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-4">
            <div class="sidebar-container">

                <!-- Location -->
                <div class="sidebar-widget">
                    <h3>Konum</h3>
                    <div class="input-with-icon">
                        <div id="autocomplete-container">
                            <input id="autocomplete-input" type="text" placeholder="Konum">
                        </div>
                        <i class="icon-material-outline-location-on"></i>
                    </div>
                </div>

                <!-- Category -->
                <div class="sidebar-widget">
                    <h3>Kategori</h3>
                    <div class="input-with-icon">
                        <select>
                            <option selected>Bütün Kategoriler</option>
                            <option>Tatlılar</option>
                            <option>Akşam Yemeği</option>
                            <option>Deniz Ürünleri</option>
                            <option>Hamur İşleri</option>
                        </select>
                    </div>
                </div>

                <!-- Keywords -->
                <div class="sidebar-widget">
                    <h3>Anahtar Kelimeler</h3>
                    <div class="keywords-container">
                        <div class="keyword-input-container">
                            <input type="text" class="keyword-input" placeholder="tatlı, börek, pasta vs.">
                            <button class="keyword-input-button ripple-effect"><i class="icon-material-outline-add"></i></button>
                        </div>
                        <div class="keywords-list" style="height: auto;"><!-- keywords go here --></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="clearfix"></div>

            </div>
        </div>
        <div class="col-xl-9 col-lg-8 content-left-offset">

            <h3 class="page-title">Search Results</h3>

            <div class="notify-box margin-top-15">
                <div class="switch-container">
                    <label class="switch"><input type="checkbox"><span class="switch-button"></span><span class="switch-text">Turn on email alerts for this search</span></label>
                </div>

                <div class="sort-by">
                    <span>Sort by:</span>
                    <div class="btn-group bootstrap-select hide-tick">
                        <button type="button" class="btn dropdown-toggle btn-default" data-toggle="dropdown" role="button" title="Relevance"> <span class="glyphicon glyphicon-ok check-mark"></span></button><select class="selectpicker hide-tick" tabindex="-98">
                            <option>Relevance</option>
                            <option>Newest</option>
                            <option>Oldest</option>
                            <option>Random</option>
                        </select>
                    </div>
                </div>
            </div>

            @if (Model.Count() == 0)
            {
                <div class="margin-top-80"></div>
                <h3 style="text-align:center">Üzgünüz, sanırsam aramanızla eşleşen bir ilan bulunmamaktadır!</h3>
                <div class="margin-top-30"></div>
                <div class="row">
                    <div class="col-xl-8 offset-xl-2">
                        <div class="intro-banner-search-form not-found-search margin-bottom-50">
                            <!-- Search Field -->
                            <div class="intro-search-field ">
                                <input id="intro-keywords" type="text" placeholder="Canın ne çekti?">
                            </div>

                            <!-- Button -->
                            <div class="intro-search-button">
                                <button class="button ripple-effect">Ara</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="freelancers-container freelancers-list-layout compact-list margin-top-35">



                @foreach (var chief in Model)
                {

                    <div class="freelancer">

                        <!-- Overview -->
                        <div class="freelancer-overview">
                            <div class="freelancer-overview-inner">

                                <!-- Bookmark Icon -->
                                <span class="bookmark-icon"></span>

                                <!-- Avatar -->
                                <div class="freelancer-avatar">
                                    <a href="single-freelancer-profile.html"><img src="~/images/avatar/woman-1.jpg" alt=""></a>
                                </div>

                                <!-- Name -->
                                <div class="freelancer-name">
                                    <h4><a href="#">@chief.Title</a></h4>
                                    <span>@chief.ApplicationUser.Name @chief.ApplicationUser.Surname</span>

                                    <!-- Rating -->
                                    <div class="freelancer-rating">
                                        <div class="star-rating" data-rating="4.5"></div>
                                    </div>
                                    <br />
                                    <strong><i class="icon-material-outline-location-on"></i> @chief.ApplicationUser.Location</strong> &nbsp; &nbsp;
                                    <strong><i class="icon-material-outline-free-breakfast"></i> @chief.Category</strong>
                                </div>
                            </div>
                        </div>

                        <!-- Details -->
                        <div class="freelancer-details">
                            <div class="freelancer-details-list">
                                <ul>
                                    <li>Ücret <strong>@chief.Price ₺</strong></li>
                                    <li>İlan Tarihi <strong>@chief.CreatedAt.ToShortDateString()</strong></li>
                                </ul>
                            </div>
                            <a href="single-freelancer-profile.html" class="button button-sliding-icon ripple-effect">İlan Detayları <i class="icon-material-outline-arrow-right-alt"></i></a>
                        </div>
                    </div>
                }


            </div>
            <!-- Freelancers Container / End -->
            @if (Model.Count() != 0)
            {
                <!-- Pagination -->
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12">
                        <!-- Pagination -->
                        <div class="pagination-container margin-top-40 margin-bottom-60">
                            <nav class="pagination">
                                <ul>
                                    <li class="pagination-arrow"><a href="#" class="ripple-effect"><i class="icon-material-outline-keyboard-arrow-left"></i></a></li>
                                    <li><a href="#" class="ripple-effect">1</a></li>
                                    <li><a href="#" class="current-page ripple-effect">2</a></li>
                                    <li><a href="#" class="ripple-effect">3</a></li>
                                    <li><a href="#" class="ripple-effect">4</a></li>
                                    <li class="pagination-arrow"><a href="#" class="ripple-effect"><i class="icon-material-outline-keyboard-arrow-right"></i></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- Pagination / End -->
            }

        </div>
    </div>
</div>
